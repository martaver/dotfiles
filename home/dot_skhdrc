####### Shortcut Hotkeys #############

# # restart Yabi, and SKHD
alt + shift - r : \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"; \
    skhd --reload


####### Application Blacklists #############
# .blacklist [ "Ghostty" ]

.load ".yabai/.skhdrc"

# Open Ghostty
cmd + shift - backspace : open -a Ghostty.app;

# Open VSCode in a new window: cmd + shift - '\'
cmd + shift - 0x2A : open -na "Visual Studio Code.app" --args --new-window;


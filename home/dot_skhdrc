####### Shortcut Hotkeys #############
# open terminal

alt - 0x32 : kitty_quake "quake-terminal"
alt - return : kitty --instance-group "General" --single-instance

# restart Yabi, SpaceBar, and SKHD
alt + shift - r : \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"; \
    skhd --reload


####### Application Blacklists #############
# .blacklist [
#  "Kitty"
# ]

.load ".yabai/.skhdrc"
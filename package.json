{
  "name": "dotfiles",
  "scripts": {
    "_ts": "ts-node -r tsconfig-paths/register --transpile-only",
    "_ts:dev": "ts-node-dev --inspect --respawn -r tsconfig-paths/register --transpile-only",    
    "dev": "yarn _ts:dev ./sync/watch.ts",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix"
  },
  "dependencies": {    
    "chokidar": "^3.5.3"    
  },
  "devDependencies": {    
    "@types/node": "latest",    
    "gts": "^3.1.0",    
    "ts-node-dev": "latest",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": ">=14"
  }
}
